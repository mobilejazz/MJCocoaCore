    {
      "name": "MJCore",
      "source_files": "Source Code/Core/*.{h,m}"
    },
    {
      "name": "MJCoreRealm",
      "source_files": "Source Code/Core/Realm/*.{h,m}",
      "dependencies": {
        "Realm": ["~>0.103"]
      }
    },
    {
      "name": "MJAppLinkRecognizer",
      "source_files": "Source Code/MJAppLinkRecognizer.{h,m}"
    },
    {
      "name": "MJSecureKey",
      "source_files": "Source Code/MJSecureKey.{h,m}"
    }
  ]
